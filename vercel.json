{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/dashboard",
      "dest": "/public/dashboard.html"
    },
    {
      "src": "/view",
      "dest": "/public/view.html"
    },
    {
      "src": "/form",
      "dest": "/public/form.html"
    },
    {
      "src": "/",
      "dest": "/public/login.html"
    }
  ]
}